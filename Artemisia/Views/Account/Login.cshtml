@{
    ViewData["Title"] = "Admin Login";
}

<h2>Admin Login</h2>

<form asp-action="Login" method="post">
    <div class="mb-3">
        <label class="form-label">Chave administrativa</label>
        <input name="adminKey" class="form-control" />
    </div>
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <button class="btn btn-primary" type="submit">Entrar</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">@foreach (var e in ViewData.ModelState.Values.SelectMany(v=>v.Errors)) { <div>@e.ErrorMessage</div> }</div>
}

@model IEnumerable<Artemisia.Models.Produto>
@{
    var cat = ViewData["CurrentCategory"] as string;
    var categoryId = (int?)(ViewData["CurrentCategoryId"] ?? 0);
    var page = (int)(ViewData["CurrentPage"] ?? 1);
}

<h1 class="mb-3">@(cat ?? "Produtos")</h1>

<div id="product-grid">
    @await Html.PartialAsync("_ProductGrid", Model)
</div>

<nav aria-label="Page navigation" class="mt-3">
    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Category", new { categoryId = categoryId, page = page + 1 })" id="load-more">Carregar mais produtos</a>
</nav>
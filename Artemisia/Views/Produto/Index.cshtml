@model IEnumerable<Artemisia.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container-fluid px-0">
    <div class="hero d-flex align-items-center justify-content-between">
        <div class="container">
            <div>
                <h1 class="h1">Bem-vindo à Artemisia</h1>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <aside class="col-lg-3 mb-4">
        <div class="filters-area">
            <h4>Filtros</h4>
            <hr />
            <div class="mb-3">
                <label class="form-label">Categoria</label>
                <select class="form-select">
                    <option>Todos</option>
                    <option>Lançamentos</option>
                    <option>Ofertas</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Preço</label>
                <input type="range" class="form-range" />
            </div>
            <div>
                <a class="btn btn-outline-secondary w-100" href="#">Ver Todos</a>
            </div>
        </div>
    </aside>

    <section class="col-lg-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                Mostrar: 
                <div class="btn-group ms-2" role="group" aria-label="Mostrar itens">
                    <button type="button" class="btn btn-outline-secondary" data-count="9">9</button>
                    <button type="button" class="btn btn-outline-secondary" data-count="12">12</button>
                    <button type="button" class="btn btn-outline-secondary" data-count="18">18</button>
                    <button type="button" class="btn btn-outline-secondary" data-count="24">24</button>
                </div>
            </div>
            <div>Ordenar por <select class="form-select d-inline-block w-auto ms-2"><option>mais recente</option></select></div>
            <div>
                @if ((bool)(ViewBag.IsAdmin ?? false))
                {
                    <a asp-controller="Produto" asp-action="Create" class="btn btn-primary ms-3">Novo Produto</a>
                }
            </div>
        </div>

        <div class="row produtos-grid">
            @foreach (var produto in Model)
            {
                <div class="col-6 col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@produto.ImagemUrl" class="card-img-top" alt="@produto.Nome" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@produto.Nome</h5>
                            <p class="card-text text-danger font-weight-bold">R$ @produto.Preco.ToString("N2")</p>

                            <div class="mt-auto">
                                <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@produto.Id" class="btn btn-outline-secondary btn-sm">Ver Detalhes</a>
                                <a asp-controller="Carrinho" asp-action="Adicionar" asp-route-id="@produto.Id" class="btn btn-success mt-2 w-100">Adicionar ao Carrinho</a>

                                @if ((bool)(ViewBag.IsAdmin ?? false))
                                {
                                    <div class="mt-2 d-flex justify-content-between">
                                        <a asp-controller="Produto" asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-warning btn-sm w-48">Editar</a>
                                        <a asp-controller="Produto" asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-danger btn-sm w-48">Excluir</a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
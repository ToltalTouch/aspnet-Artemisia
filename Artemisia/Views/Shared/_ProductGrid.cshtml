@model IEnumerable<Artemisia.Models.Produto>

<div class="row produtos-grid">
    @foreach (var p in Model)
    {
        <div class="col-6 col-md-4 mb-4">
            <div class="card h-100">
                <img src="@p.ImagemUrl" class="card-img-top" alt="@p.Nome" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@p.Nome</h5>
                    <p class="card-text text-muted">@p.Descricao</p>
                    <div class="mt-auto">
                        <span class="fw-bold text-danger">R$ @p.Preco.ToString("N2")</span>
                        <a asp-controller="Produto" asp-action="Detalhes" asp-route-id="@p.Id" class="btn btn-outline-secondary btn-sm float-end">Ver</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
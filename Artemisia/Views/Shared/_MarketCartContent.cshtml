@model Artemisia.Models.CartViewModel

@if (Model == null || !Model.Items.Any())
{
    <div class="text-center py-4">Seu carrinho est√° vazio.</div>
}
else
{
    <div class="list-group">
        @foreach (var item in Model.Items)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@item.Nome</strong><br />
                    <small>@item.Preco.ToString("C")</small>
                </div>
                <div class="d-flex align-items-center">
                    <button class="btn btn-sm btn-outline-secondary me-2">-</button>
                    <span class="badge bg-light text-dark">@item.Quantidade</span>
                    <button class="btn btn-sm btn-outline-secondary ms-2">+</button>
                </div>
                <div>
                    <button class="btn btn-sm btn-outline-danger">Remover</button>
                </div>
            </div>
        }
    </div>

    <div class="mt-3 d-flex justify-content-between align-items-center">
        <div><strong>Total:</strong> @Model.Total.ToString("C")</div>
        <div>
            <a class="btn btn-outline-secondary me-2" href="/Market/Index">Ver Carrinho</a>
            <a class="btn btn-primary" href="/Market/Checkout">Finalizar Compra</a>
        </div>
    </div>
}
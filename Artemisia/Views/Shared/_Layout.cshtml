<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artemisia</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Promo Bar -->
        <div class="top-bar text-white text-center py-2">
            <div class="container small">Frete grátis nas compras acima de R$299</div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light main-nav py-3">
            <div class="container d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo_text.png" alt="Logo" class="brand-logo mr-2"/>
                </a>
                
                <form class="flex-fill mx-4" asp-controller="Produto" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="busca" class="form-control" placeholder="Pesquisar produtos..." />
                        <button class="btn btn-brown" type="submit">🔍</button>
                    </div>
                </form>

                <div class="d-flex align-items-center">
                    <a class="nav-link text-dark me-3" href="https://www.instagram.com/lojaartemisia_/" target="_blank">Instagram</a>
                    <a class="nav-link text-dark me-3" asp-controller="Carrinho" asp-action="Index">🛒 Carrinho (@(ViewBag.TotalItensCarrinho ?? 0))</a>
                    <a class="btn btn-outline-secondary me-3" asp-controller="Home" asp-action="Privacy">Seja um Franqueado</a>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <span class="me-2">Olá, @User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link p-0">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Admin Login</a>
                    }
                </div>

                <!-- navigation placeholder (moved below as category bar) -->

            </div>
    </header>

        @* Category bar partial (hybrid server + AJAX) *@
        @await Html.PartialAsync("_CategoryMenu")

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Artemisia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
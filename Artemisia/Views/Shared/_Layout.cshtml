<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Artemisia</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Promo Bar -->
        <div class="top-bar text-white text-center py-2">
            <div class="container small">Frete grátis nas compras acima de R$299</div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light main-nav py-3">
            <div class="container d-flex align-items-center">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.png" alt="Logo" class="brand-logo mr-2"/>
                    <span class="brand-name">Artemisia</span>
                </a>
                
                <form class="flex-fill mx-4" asp-controller="Produto" asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" name="busca" class="form-control" placeholder="Pesquisar produtos..." />
                        <button class="btn btn-brown" type="submit">🔍</button>
                    </div>
                </form>

                <div class="d-flex align-items-center">
                    <a class="nav-link text-dark me-3" asp-controller="Home" asp-action="Catalog">Blog</a>
                    <a class="nav-link text-dark me-3" asp-controller="Carrinho" asp-action="Index">🛒 Carrinho (@(ViewBag.TotalItensCarrinho ?? 0))</a>
                    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Privacy">Seja um Franqueado</a>
                </div>

                <!-- navigation placeholder (moved below as category bar) -->

            </div>
    </header>

        <!-- Category bar (centered horizontal list) -->
        <div class="category-nav">
            <div class="container">
                <ul class="nav justify-content-center">
                    <li class="nav-item"><a class="nav-link" href="#">INÍCIO</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="plannersMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">PLANNERS/AGENDAS 2026</a>
                        <div class="dropdown-menu megamenu p-4" aria-labelledby="plannersMenu">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Planners</h6>
                                        <a class="dropdown-item" href="#">Planners Slim</a>
                                        <a class="dropdown-item" href="#">Planner Office</a>
                                        <a class="dropdown-item" href="#">Planner Life</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Tipos</h6>
                                        <a class="dropdown-item" href="#">Planner Diário</a>
                                        <a class="dropdown-item" href="#">Planner Classic</a>
                                        <a class="dropdown-item" href="#">Smart Agenda</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Acessórios</h6>
                                        <a class="dropdown-item" href="#">Estojo</a>
                                        <a class="dropdown-item" href="#">Divisórias</a>
                                        <a class="dropdown-item" href="#">Adesivos</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Coleções</h6>
                                        <a class="dropdown-item" href="#">Edições Especiais</a>
                                        <a class="dropdown-item" href="#">Ver Todos</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="sacolasMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">SACOLAS PERSONALIZADAS</a>
                        <div class="dropdown-menu megamenu p-4" aria-labelledby="sacolasMenu">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Sacolás</h6>
                                        <a class="dropdown-item" href="#">Sacolás para Eventos</a>
                                        <a class="dropdown-item" href="#">Sacolás Corporativas</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Modelos</h6>
                                        <a class="dropdown-item" href="#">Tamanho P</a>
                                        <a class="dropdown-item" href="#">Tamanho M</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Materiais</h6>
                                        <a class="dropdown-item" href="#">Couro</a>
                                        <a class="dropdown-item" href="#">Tecido</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Ofertas</h6>
                                        <a class="dropdown-item" href="#">Promoções</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="canecasMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">CANECAS</a>
                        <div class="dropdown-menu megamenu p-4" aria-labelledby="canecasMenu">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Canecas</h6>
                                        <a class="dropdown-item" href="#">Canecas Personalizadas</a>
                                        <a class="dropdown-item" href="#">Canecas Temáticas</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Coleções</h6>
                                        <a class="dropdown-item" href="#">Collab</a>
                                        <a class="dropdown-item" href="#">Lançamentos</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Acessórios</h6>
                                        <a class="dropdown-item" href="#">Caps</a>
                                        <a class="dropdown-item" href="#">Embalagens</a>
                                    </div>
                                    <div class="col-6 col-md-3">
                                        <h6 class="dropdown-header">Ofertas</h6>
                                        <a class="dropdown-item" href="#">Promoções</a>
                                        <a class="dropdown-item" href="#">Mais Vendidos</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Artemisia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidade</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>